# Required for /backoffice login
BACKOFFICE_PASSWORD=change-me

# Turso (libSQL) database for inventory/categories/products
# Example: libsql://<db-name>-<org>.turso.io
TURSO_DATABASE_URL=
# Turso auth token (required for libsql:// or https:// URLs)
TURSO_AUTH_TOKEN=

# Vercel Blob
#
# Production: set this to your real Vercel Blob read-write token.
# Local testing: use vercel-blob-server and set:
#   BLOB_READ_WRITE_TOKEN=vercel_blob_rw_somefakeid_nonce
#   VERCEL_BLOB_API_URL=http://localhost:9966
BLOB_READ_WRITE_TOKEN=
VERCEL_BLOB_API_URL=

# Optional: signing secret for the /backoffice session cookie.
# If omitted, BACKOFFICE_PASSWORD is used.
# BACKOFFICE_SESSION_SECRET=change-me-too
